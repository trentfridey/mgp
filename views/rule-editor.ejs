<html>
  <head>
    <title>Rules - MGP</title>
    <link rel="stylesheet" type="text/css" href="style.css"/>
    <link rel="stylesheet" type="text/css" href="rules.css"/>
  </head>
  <body>
    <div class="container">
		  <div class="navbar">
		    <div class="logo">
		      Modular Growing Pixels
		    </div>
		    <div class="navgroup">
		      <div class="navitem" id="home">
		        Home
		      </div>
		      <a href="about">
		      <div class="navitem" id="about">
		        About
		      </div>
		      </a>
		      <a href="signin">
		      <div class="navitem" id="signlog">
		        Sign Up / Log In
		      </div>
		      </a>
		      <div style="clear: both"> <!-- for floats -->
		      </div>
		    </div>
		  </div>
      <center>
      	
        <div class="content" ngController="mgpRuleEditCtrl">
          <h1>
            Rule Editor
          </h1>
          <!-- experimental <div class="btn" ng-click="editAlive = !editAlive">Toggle Alive/Dead</div> --->
          <div ng-if="editAlive">
		        <div class="inline-block">
		          <h2>
		            Stay Alive
		          </h2>
		          <mgp-rule-editor name="stayAlive" ng-model="user.rule" type="stayAlive">
		          </mgp-rule-editor>
		        </div>
		        <div class="inline-block">
		          <h2>
		            To Alive
		          </h2>
		          <mgp-rule-editor name="stayDead" ng-model="user.rule" type="toAlive">
		          </mgp-rule-editor>
		        </div>
		        <div class="btn">Submit</div>
          </div>
          <!--- experimental 
          <div ng-if="!editAlive">
		        <div class="inline-block">
		          <h2>
		            Stay Dead
		          </h2>
		          <mgp-rule-editor name="toAlive" ng-model="user.rule" type="stayDead">
		          </mgp-rule-editor>
		        </div>
		        <div class="inline-block">
		          <h2>
		            To Dead
		          </h2>
		          <mgp-rule-editor name="toDead" ng-model="user.rule" type="toDead">
		          </mgp-rule-editor>
		        </div>
		        <div class="btn">Submit</div>
          </div>
          --->
        </div>
      </center>
      <div class="push"></div> <!-- For sticky footer --->
    </div>
    <div class="footer">
    Made by Trent Fridey 2017
  </div>
    <footer>
      <script src="jquery-3.1.1.min.js"></script>
      <script src="angular.min.js"></script>
      <script src="angular-resource.min.js"></script>
      <script src="client.js"></script>
    </footer>
  </body>
  
</html>
